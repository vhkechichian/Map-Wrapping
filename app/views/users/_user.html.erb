<tr class="<%= cycle('table0', 'table1') -%>">
  <td><%= time_ago_in_words(user.created_at) -%> ago.</td>
  <td><%= link_to(( user.login), user_path(user.id), :method => :get)  -%></td>
  <% if admin_authorized? %>
    <td><%=h user.provider -%></td>
    <td><%=h user.email -%></td>
    <td><%= user.enabled ? 'yes' : 'no' -%>&nbsp;
      <% unless user == current_user -%>
        <% if user.enabled -%>
          <%= link_to('disable', disable_user_path(user.id), :method => :put) -%>
        <% else -%>
          <%= link_to('enable', enable_user_path(user.id), :method => :put) -%>
        <% end -%>

      <% end -%>
      &nbsp;
    </td>
    <td>
      <%= user.confirmed? ? 'yes' : 'no' -%>
      <% if !user.confirmed? -%>
        <%= link_to('activate', force_confirm_user_path(user.id), :method => :put) -%>  
      <% end-%>
    </td>
    <td><%= link_to 'edit roles', user_roles_path(user) -%></td>
  <% end -%>
</tr>
