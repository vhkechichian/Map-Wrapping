<h3> <%= t('.header') %> <%= comment_obj.class %> </h3>

<%= form_tag comments_path  do %>
  <%= text_area 'comment', 'comment', :rows => "4" %>
  <br />
  <%= submit_tag t('.add_comment') %>

  <%= hidden_field 'commentable', 'commentable', :value => comment_obj.class %>
  <%= hidden_field 'commentable', 'commentable_id', :value => comment_obj.id %>
<% end  %>
