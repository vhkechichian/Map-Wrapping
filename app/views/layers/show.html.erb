<div id="loading-spinner" style="width:100px;margin-left:auto;margin-right:auto" class="hidden">Loading..... <br /><img src="/images/load.gif" /> </div>
<div id="map_table_div">
  <table id="map_table" cellpadding="3">
    <thead>
      <tr>
        <th>Map</th>
        <th>Title</th>
        <th>Last modified</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody id="results">
      <%= render :partial => 'maps/map', :collection => @maps unless @maps.nil? %>
    </tbody>
  </table>

  <div id="search-pagination-bottom">
    <%= will_paginate @maps , :renderer => FlowPagination::LinkRenderer%>
  </div>
</div>

