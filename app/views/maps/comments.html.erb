<h2> <%= t('.header') %> </h2>
<%unless @comments.empty? -%>
  <%= render :partial => 'comments/comment', :collection => @comments %>
<% else -%>
  <%= t('.no_comments') %> <br />
<% end -%>
<% if user_signed_in? %>
  <%= render :partial => 'comments/comment_form', :object => @map, as: 'comment_obj' -%>
<% else -%>
  <%= link_to t('.login'), new_user_session_path() %> 
<% end -%>
